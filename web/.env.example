API_AUTH_TOKEN=           # Required: auth token for API routes
# SECURITY NOTE: NEXT_PUBLIC_ prefix intentionally exposes this token to the browser.
# This is by design for self-hosted, single-user deployments behind a VPN/firewall.
# For multi-user or public deployments, implement a server-side proxy layer instead.
NEXT_PUBLIC_API_AUTH_TOKEN=  # Required: public auth token for client-side API calls
OPENAI_API_KEY=           # Optional: enables AI chat
PAPER_TRADING_ENABLED=true
NODE_ENV=production       # Node environment (production, development)
